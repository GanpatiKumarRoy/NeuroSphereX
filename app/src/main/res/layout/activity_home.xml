<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.ui.activity.HomeActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/background_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/userProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_profile_background_icon_main"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/empShortName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:text="GR"
                    android:textColor="@color/white_color"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginEnd="@dimen/dp_5"
                    app:layout_constraintBottom_toBottomOf="@+id/userProfile"
                    app:layout_constraintEnd_toEndOf="@+id/userProfile"
                    app:layout_constraintStart_toStartOf="@+id/userProfile"
                    app:layout_constraintTop_toTopOf="@+id/userProfile" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/screenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_details"
                    android:textSize="@dimen/sp_17"
                    android:layout_marginStart="@dimen/sp_15"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/primary_color"
                    app:layout_constraintStart_toEndOf="@id/userProfile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_icon"
                    app:layout_constraintEnd_toStartOf="@id/helpSection"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/dp_10" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/helpSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/help_icon"
                    app:layout_constraintEnd_toStartOf="@id/notificationSection"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/dp_10" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/notificationSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notification_icon"
                    android:layout_marginEnd="@dimen/dp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLayout"
                tools:listitem="@layout/leaning_course_items" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu_navigation"
            android:layout_marginEnd="-65dp"
            app:headerLayout="@layout/nav_header"
            android:background="@color/white_color"
            app:itemTextColor="@color/primary_color"
            app:itemIconTint="@color/primary_color"
            android:fitsSystemWindows="true"
            app:itemTextAppearance="@style/CustomNavigationViewText"
            app:itemIconSize="@dimen/dp_30" />

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>